<form method="post" action="{{ path('app_product_property_delete', {'id': product_property.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product_property.id) }}">
    {% for flash_error in app.flashes('verify_product_property_delete') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <button class="btn btn-danger mt-3">Delete</button>
</form>
